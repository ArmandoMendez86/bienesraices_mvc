extends ../layout/index

block contenido
    .py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raíces
        h2.text-center.text-2xl.font-extrabold=pagina 
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5 
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='email') Email
                        input#email.w-full.px-3.py-2.border.border-gray-300(placeholder='email' type='email', name='email')
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='password') Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300(placeholder='password' type='password', name='password')
                    .flex.items-center.justify-between
                        a.text-gray-400.text-xs(href="http:/auth/registro") ¿No tienes cuenta? Registrate
                        a.text-gray-400.text-xs(href="http:/auth/olvide-password") Olvide mi password
                    input(class='w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer' type='submit', value='Crear cuenta')