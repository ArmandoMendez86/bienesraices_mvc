extends ../layout/index

block contenido
    .py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raíces
        h2.text-center.text-2xl.font-extrabold=pagina 

        if errores 
            div(class='max-w-md mx-auto my-10')
                each error in errores
                    p.bg-red-900.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg 




        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method='POST' action='/auth/registro' novalidate)  
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='nombre') Tu nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300(placeholder='Tu nombre' type='text', name='nombre' value= usuario ? usuario.nombre : '')
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='email') Tu email
                        input#email.w-full.px-3.py-2.border.border-gray-300(placeholder='Tu email' type='email', name='email' value= usuario ? usuario.email : '')
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='password') Tu password
                        input#password.w-full.px-3.py-2.border.border-gray-300(placeholder='Tu password' type='password', name='password')
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='repetir_password') Repetir password
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-300(placeholder='Repite tu password' type='password', name='repetir_password')
                    .flex.items-center.justify-between
                        a.text-gray-400.text-xs(href="http:/auth/login") ¿Ya tienes cuenta? Inicia sesión
                        a.text-gray-400.text-xs(href="http:/auth/olvide-password") Olvide mi password
                    input(class='w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer' type='submit', value='Crear cuenta')